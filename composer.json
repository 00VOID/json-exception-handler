{
    "name": "sfelix-martins/json-exception-handler",
    "description": "Adds more power to Laravel Exceptions Handler to treat json responses",
    "type": "library",
    "keywords": ["laravel", "exceptions", "handler", "json", "api", "jsonapi"],
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Martins",
            "email": "sfelix_martins@hotmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "autoload": {
        "psr-4": {
            "SMartins\\Exceptions\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/TestCase.php"
        ],
        "psr-4": {
            "SMartins\\Exceptions\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SMartins\\Exceptions\\JsonHandlerServiceProvider"
            ]
        }
    },
    "require-dev": {
        "orchestra/testbench": "^6.23|^7.0|^8.0",
        "phpunit/phpunit": "^9.0|^10.0"
    }
}
